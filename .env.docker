# MAI Framework V2 - Docker Environment

# Application
APP_NAME=mai-framework
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost","http://localhost:80","http://localhost:3000"]

# Database (PostgreSQL)
POSTGRES_USER=mai
POSTGRES_PASSWORD=mai_secret_change_me
POSTGRES_DB=mai_framework
DATABASE__URL=postgresql+asyncpg://mai:mai_secret_change_me@postgres:5432/mai_framework
DATABASE__POOL_SIZE=20
DATABASE__MAX_OVERFLOW=10
DATABASE__POOL_TIMEOUT=30

# Redis
REDIS__URL=redis://redis:6379/0
REDIS__MAX_CONNECTIONS=50
REDIS__TIMEOUT=5

# Qdrant
QDRANT__URL=http://qdrant:6333
QDRANT__GRPC_PORT=6334
QDRANT__COLLECTION_NAME=mai_memory
QDRANT__PREFER_GRPC=true

# LLM Provider
LLM__PROVIDER=mlxlm
MLXLM__BASE_URL=http://host.docker.internal:8081/v1
MLXLM__API_KEY=not-needed
MLXLM__MODEL_NAME=mlx-community/Qwen2.5-7B-Instruct-4bit
MLXLM__MAX_TOKENS=32768
MLXLM__TEMPERATURE=0.7
MLXLM__TIMEOUT=120

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Memory Configuration
SHORT_TERM_MEMORY_TTL=3600
LONG_TERM_MEMORY_ENABLED=true
